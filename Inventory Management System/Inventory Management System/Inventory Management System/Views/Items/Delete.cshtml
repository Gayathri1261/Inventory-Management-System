@model Inventory_Management_System.Models.Item

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        padding: 0;
        background-image: url('/lib/GC3.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        color: #333;
    }

    .main-content {
        padding-top: 80px;
    }

    .delete-container {
        background: rgba(255, 255, 255, 0.95);
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 0 auto;
        border: 1px solid rgba(0, 0, 0, 0.1);
    }

    h1 {
        color: #d32f2f;
        text-align: center;
        margin-bottom: 10px;
    }

    h3 {
        text-align: center;
        color: #f57c00;
        margin-bottom: 25px;
    }

    h4 {
        text-align: center;
        color: #1976d2;
    }

    hr {
        border-color: #ccc;
        margin: 15px 0;
    }

    dt {
        font-weight: bold;
        color: #1565c0;
        margin-top: 10px;
    }

    dd {
        margin-bottom: 10px;
        color: #444;
    }

    form {
        text-align: center;
        margin-top: 30px;
    }

    input[type="submit"] {
        background-color: #e53935;
        color: white;
        border: none;
        padding: 10px 20px;
        font-weight: bold;
        border-radius: 6px;
        cursor: pointer;
        transition: background-color 0.3s ease, box-shadow 0.2s;
        box-shadow: 0 4px 10px rgba(229, 57, 53, 0.3);
    }

        input[type="submit"]:hover {
            background-color: #c62828;
            box-shadow: 0 6px 14px rgba(198, 40, 40, 0.5);
        }

    a.btn-back {
        background-color: #607d8b;
        color: white;
        text-decoration: none;
        padding: 10px 16px;
        border-radius: 6px;
        margin-left: 10px;
        font-weight: bold;
        transition: background-color 0.3s, box-shadow 0.2s;
        box-shadow: 0 4px 10px rgba(96, 125, 139, 0.3);
    }

        a.btn-back:hover {
            background-color: #455a64;
            box-shadow: 0 6px 14px rgba(69, 90, 100, 0.5);
        }
</style>

<div class="main-content">
    <div class="delete-container">
        <h1>Delete Item</h1>
        <h3>Are you sure you want to delete this?</h3>
        <h4>Item</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Quantity)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Quantity)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Price)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Price)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Category)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Category)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Supplier)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Supplier)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" />
            <a asp-action="Index" class="btn-back">Back to List</a>
        </form>
    </div>
</div>
