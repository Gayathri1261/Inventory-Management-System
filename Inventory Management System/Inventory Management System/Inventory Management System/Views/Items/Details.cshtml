@model Inventory_Management_System.Models.Item

@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        padding: 0;
        background-image: url('/lib/GC3.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        color: #333;
    }

    .details-container {
        max-width: 600px;
        margin: 50px auto;
        background: rgba(255, 255, 255, 0.95);
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(0, 0, 0, 0.1);
    }

    h1, h4 {
        text-align: center;
        color: #222;
        margin-bottom: 20px;
    }

    dt {
        font-weight: bold;
        color: #1565c0;
        margin-top: 10px;
    }

    dd {
        margin-bottom: 10px;
        color: #444;
    }

    hr {
        border-color: #ccc;
        margin: 20px 0;
    }

    .action-links {
        text-align: center;
        margin-top: 25px;
    }

        .action-links a {
            text-decoration: none;
            background-color: #1976d2;
            color: white;
            padding: 10px 20px;
            border-radius: 6px;
            font-weight: 600;
            margin: 0 10px;
            transition: background-color 0.3s, box-shadow 0.2s;
            box-shadow: 0 4px 10px rgba(25, 118, 210, 0.3);
            display: inline-block;
        }

            .action-links a:hover {
                background-color: #1565c0;
                box-shadow: 0 6px 14px rgba(21, 101, 192, 0.5);
            }
</style>

<div class="details-container">
    <h1>Item Details</h1>
    <h4>Item</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Quantity)
        </dd>

        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Category)
        </dd>

        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Supplier)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Supplier)
        </dd>
    </dl>

    <div class="action-links">
        <a asp-action="Edit" asp-route-id="@Model?.Id">✏️ Edit</a>
        <a asp-action="Index">⬅ Back to List</a>
    </div>
</div>
